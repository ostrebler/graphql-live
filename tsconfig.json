    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "importHelpers": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["packages"],
  "exclude": ["**/node_modules", "**/dist", "packages/*-demo"]
}
